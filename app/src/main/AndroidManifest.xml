<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="de.egh.bikehist"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
            android:name=".persistance.BikeHistProvider"
            android:authorities="de.egh.provider.bikehist"/>

        <activity
            android:name=".masterdata.MasterDataListActivity"
            android:label="@string/title_item_list"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".masterdata.MasterDataDetailActivity"
            android:label="@string/title_item_detail"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".masterdata.MasterDataListActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".masterdata.MasterDataListActivity"/>
        </activity>

        <service
            android:name=".SaveDataService"
            android:enabled="true"
            android:exported="false">
        </service>
    </application>

</manifest>
